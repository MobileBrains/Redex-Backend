<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="text-center">
                <h1 class="title">Importar Archivo CSV</h1>
                <hr style="width: 100%; border-top: 1px solid #ad3f3f;">
            </div>
        </div>
    </div>
    <div class="row">
        <%= form_tag import_delivery_orders_path,class: "devise_form", multipart: true do %>
          <%= file_field_tag :file,  {:accept => '.csv', :onchange => "checkfile(this)", :class => 'textFile'} %>
          <%= submit_tag "Importar CSV" %>
        <% end %>
    </div>
    <div class="row">
        <div class="container-fluid">
          <div class="table-responsive">
            <table class="table table-striped table-inverse">
              <thead>
                <tr >
                  <th>Radication at</th>
                  <th>Delivered at</th>
                  <th>Charge_number</th>
                  <th>Courrier</th>
                  <th>City</th>
                  <th>Internal_guide</th>
                  <th>Destinatary</th>
                  <th>Adderss</th>
                  <th>Client</th>
                  <th>Externa_guide</th>
                  <th>State</th>
                  <th>Image</th>
                </tr>
              </thead>
              <% @delivery_orders.each do |order| %>
                <tr>
                  <td><%= order.radication_at %></td>
                  <td><%= order.delivered_at %></td>
                  <td><%= order.charge_number %></td>
                  <td><%= order.delivery_man %></td>
                  <td><%= order.city %></td>
                  <td><%= order.internal_guide %></td>
                  <td><%= order.destinatary %></td>
                  <td><%= order.adderss %></td>
                  <td><%= order.client %></td>
                  <td><%= order.externa_guide %></td>
                  <td><%= order.state %></td>
                  <td><%= order.image %></td>
                </tr>
              <% end %>
            </table>
          </div>
        </div>
    </div>
</div>


